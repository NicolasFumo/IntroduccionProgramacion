class Persona
{
    public string Nombre;
    public string Apellido;
    public int DNI;
    public string Direccion;

    public void Saludar()
    {
        Console.WriteLine("Hola!");
    }

    public void Presentarse()
    {
        Console.WriteLine($"Yo soy {Nombre}, {Apellido}");
    }
}

