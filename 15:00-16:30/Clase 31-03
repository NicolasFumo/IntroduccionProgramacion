string miNombre;

Console.Write("Ingrese su nombre: ");
miNombre = Console.ReadLine();

if( miNombre == "Nicolas" ){
    Console.WriteLine("Hola nicolas!");
}
else{
    Console.WriteLine("sos otra persona");
}
/*

Repite un numero FINITO de veces el codigo entre las { }
for(contador - condicion - incremento){
    Console.WriteLine("Hola!");

}

Repite INDEFINIDAMENTE hasta que la condicion se hace falsa
while(condicion){

}

igual al While pero siempre se ejecuta el codigo al menos una vez
do{

}while(condicion)

*/

for(int variable = 0; variable < 10; variable++){
    // codigo
}

while(miNombre == "Nicolas"){
    // codigo
}

do{
    // codigo
}while(miNombre == "Nicolas");

// Concatenar ("texto" + "texto"....)
Console.WriteLine("Usted escribio: " + miNombre);
